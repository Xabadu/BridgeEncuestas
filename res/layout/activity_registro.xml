<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_registro"
    tools:context=".RegistroActivity" >
    
    <ImageView
    	android:id="@+id/imgTopbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bg_topbar" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="7dp"
        android:text="@string/breadcrumb_registro"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="8sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgTopbar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/img_container_registro"
        android:layout_centerInParent="true"
        android:alpha="0.9" >

        <TextView
            android:id="@+id/registerContainerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_registro"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/registerContainerText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerContainerHeader"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/text_register"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/btnCancelarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_cancel"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:id="@+id/btnGuardarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_accept"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/registerContainerHeader"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="20dp"
            android:hint="Nombre (obligatorio)"
            android:padding="3dp"
            android:background="@drawable/rounded_bg_edittext" >
       

        </EditText>
        

        
        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/rounded_bg_edittext"
            android:layout_below="@+id/editText1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="20dp"
            android:hint="Apellidos (obligatorio)"
            android:padding="3dp" >
       

        </EditText>
        
        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/rounded_bg_edittext"
            android:layout_below="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="20dp"
            android:hint="Correo (obligatorio)"
            android:padding="3dp" >
       

        </EditText>
        
        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/rounded_bg_edittext"
            android:layout_below="@+id/editText3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="270dp"
            android:layout_marginRight="50dp"
            android:hint="RUT"
            android:padding="3dp" >
       

        </EditText>
        
        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/rounded_bg_edittext"
            android:layout_below="@+id/editText4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="270dp"
            android:layout_marginRight="50dp"
            android:hint="Patente (sin guiones)"
            android:padding="3dp">
       

        </EditText>
        
        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/rounded_bg_edittext"
            android:layout_below="@+id/editText5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="270dp"
            android:layout_marginRight="50dp"
            android:hint="Telefono"
            android:padding="3dp">
       

        </EditText>

    </RelativeLayout>

</RelativeLayout>
